<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.kris.handwriting.MainActivity">

    <RelativeLayout
        android:id="@+id/surfaceContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <FrameLayout
        android:id="@+id/paintToolsContainer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/paintToolbar_height"
        android:layout_margin="@dimen/paintToolbar_margin"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
